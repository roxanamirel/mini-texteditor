package fr.istic.aco.editor.core.impl;

import fr.istic.aco.editor.core.RecorderManager;

/**
 * The Class RecorderManagerImpl.
 * @version 2
 */
public class RecorderManagerImpl implements RecorderManager {

	/** The is recording. */
	private boolean isRecording;

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.core.RecorderManager#record(boolean)
	 */
	@Override
	public void record(boolean isRecording) {
		this.isRecording = isRecording;
	}

	/* (non-Javadoc)
	 * @see fr.istic.aco.editor.core.RecorderManager#isRecording()
	 */
	@Override
	public boolean isRecording() {
		return isRecording;
	}

}
